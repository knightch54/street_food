<table class="table table-striped table-hover">
  <thead class="table-orange">
    <tr>
      <th>Status</th>
      <th>Sum</th>
      <th>Date</th>
      <th class="text-center">Settings</th>
    </tr>
  </thead>

  <tbody>
    <% @cash_balances.each do |cash_balance| %>
      <tr>
        <td><%= cash_balance.status.titleize %></td>
        <td><%= number_to_currency(cash_balance.sum, :unit => "$") %></td>
        <td><%= cash_balance.created_at.strftime("%d/%m/%Y")%></td>
        <td class="text-center">
          <% if @orders.any? %>
            <div class="slidecontainer">
              <input type="range" min="1" max="100" value="50" class="slider" id="myRange"> %
            </div>
            <%= link_to cash_balances_close_cashbox_path(cash_balance), class: "btn order-btn", method: :post do %>
              <i class="icofont-bbq"></i> Close cashbox & pay to Chef <%= "#{@chef.name} (#{@chef.email})" %>
            <% end %>
          <% else %>
            <%= link_to "#", class: "btn order-btn disabled", method: :post do %>
              <i class="icofont-bbq"></i> Close cashbox & pay to Chef
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>

<% if @orders.any? %>
  <h2 class="mb-4">Today completed orders - by Chef <%= "#{@chef.name} (#{@chef.email})" %></h2>
  <table class="table table-striped table-hover">
    <thead class="table-orange">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Status</th>
        <th scope="col">Names of dishes</th>
        <th scope="col">Price</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= order.id %></td>
          <td>
            <% case order.status 
            when "waiting" %>
              <i class="icofont-chef"></i>
            <% when "in_progress" %>
              <i class="icofont-wall-clock"></i>
            <% else %>
              <i class="icofont-check-circled"></i>
            <% end %>
            <%= order.status.titleize %>
          </td>
          <td><%= order.foods.map{|f|f.name}.join(", ") %></td>
          <td><%= number_to_currency(order.price, :unit => "$") %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
  <% else %>
    <h2>Ð¡urrently no completed orders...</h2>
  <% end %>
<div class="special-section">
  <section class="ftco-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6 text-center mb-5">
          <h1 class="heading-section">Show Cashbox</h1>
        </div>
      </div>
      <p id="notice"><%= notice %></p>
      <div class="row justify-content-center form">
        <div class="col-md-6 col-lg-4">
          <div class="login-wrap py-5">
            <p>
              <strong>Chef ID:</strong>
              <%= @cash_balance.user_id.present? ? @cash_balance.user_id : "-" %>
            </p>
            <p>
              <strong>Status:</strong>
              <%= @cash_balance.status.titleize %>
            </p>
            <p>
              <strong>Sum:</strong>
              <%= @cash_balance.sum %>
            </p>
            <p>
              <strong>Date:</strong>
              <%= @cash_balance.created_at.strftime("%d/%m/%Y")%>
            </p>
          </div>
        </div>
      </div>
      <%= link_to 'Edit', edit_cash_balance_path(@cash_balance) %> |
      <%= link_to 'Back', cash_balances_path %>
    </div>
  </section>
</div>
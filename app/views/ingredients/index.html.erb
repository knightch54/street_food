<div class="special-section">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Ingredients</h1>

    <table class="table table-striped table-hover">
      <thead class="table-orange">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Amount</th>
          <th scope="col" colspan="3" class="text-end">Settings</th>
        </tr>
      </thead>

      <tbody>
        <% @ingredients.each do |ingredient| %>
        <tr>
          <td><%= ingredient.name %></td>
          <td><%= ingredient.description %></td>
          <td><%= ingredient.price %></td>
          <td><%= ingredient.amount %></td>
          <td colspan="3" class="text-end">
            <%= link_to 'Show', ingredient %>
            <%= link_to 'Edit', edit_ingredient_path(ingredient) %>
            <%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Ingredient', new_ingredient_path, class: "btn order-btn" %>
  </div>
</div>
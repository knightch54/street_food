<div class="special-section">
  <div class="container">
    <p id="notice"><%= notice %></p>
    <h1>List of foods</h1>

    <table class="table table-striped table-hover">
      <thead class="table-orange">
        <tr>
          <th scope="col">#</th>
          <th scope="col">name</th>
          <th scope="col">price</th>
          <th scope="col">description</th>
          <th scope="col" colspan="3" class="text-center">Settings</th>
        </tr>
      </thead>
      <% @foods.each do |food| %>
        <tbody>
          <tr>
            <td><%= food.id %></td>
            <td><%= food.name %></td>
            <td><%= food.price %></td>
            <td><%= food.description %></td>
            <td class="text-center"><%= link_to 'Show', food %></td>
            <td class="text-center"><%= link_to 'Edit', edit_food_path(food) %></td>
            <td class="text-center"><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
    <%= link_to 'New food', new_food_path, class: "btn order-btn" %>
  </div>
</div>
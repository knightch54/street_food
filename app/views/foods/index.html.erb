<p id="notice"><%= notice %></p>

<h1>List of dishes</h1>

<table>
  <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.description %></td>
      <td><%= link_to 'Show', food %></td>
      <td><%= link_to 'Edit', edit_user_path(food) %></td>
      <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

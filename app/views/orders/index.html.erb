<div class="special-section">
  <div class="container">
    <p id="notice"><%= notice %></p>
    <h1>List of Orders</h1>

    <table class="table table-striped table-hover">
      <thead class="table-orange">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Status</th>
          <th scope="col">Price</th>
          <th scope="col" colspan="3" class="text-center">Settings</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.status %></td>
            <td><%= order.price %></td>
            <td class="text-center"><%= link_to 'Show', order %></td>
            <td class="text-center"><%= link_to 'Edit', edit_order_path(order) %></td>
            <td class="text-center"><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
    <%= link_to 'New Order', new_order_path, class: "btn order-btn" %>
  </div>
</div>

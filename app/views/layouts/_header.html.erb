<header>
  <div class="header py-1">
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light px-0 py-0">
        <a class="navbar-brand" href="<%= root_path %>">
          <div class="logo">
            <%= image_pack_tag('logo.png', class: "w-100 img-fluid") %>
          </div>
        </a>
        <div class="open-time">
          <h6><i class="icofont-clock-time"></i> Open Now</h6>
          <span>8AM - 10PM</span>
        </div>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav navbar-custom">
            <%= render partial: "layouts/menus/#{@user_logged_in_and_is_staff ? current_user.role + "_menu" : "menu"}" %>
            <li class="nav-item last-menu-bg">
              <span class="nav-link">
                <% if user_signed_in? %>
                  <%= link_to "Profile (#{current_user.role})", current_user %> <span class="dashl">|</span> <%= link_to "Log out", destroy_user_session_path, :method => :delete %>
                <% else %>
                  <%= link_to "Log in", new_user_session_path %>
                <% end %>
              </span>
            </li>
            <li class="nav-item">
              <span class="nav-link cart-link">
                <%= link_to show_shopping_cart_path, remote: true, class: "" do %>
                  <i class="icofont-food-cart"></i>
                  <% if shopping_cart_contain_products? %>
                    <%= shopping_cart_size %>
                  <% end %>
                <% end %>
              </span>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </div>
</header>
<div class="special-section">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Managers</h1>

    <table class="table table-striped table-hover">
      <thead class="table-orange">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col" colspan="3" class="text-center">Settings</th>
        </tr>
      </thead>
      <tbody>
        <% @managers.each do |manager| %>
        <tr>
          <td><%= manager.name %></td>
          <td><%= manager.email %></td>
          <td><%= link_to 'Show', manager %></td>
          <td><%= link_to 'Edit', edit_manager_path(manager) %></td>
          <td><%= link_to 'Destroy', manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New Manager', new_manager_path, class: "btn order-btn" %>
  </div>
</div>